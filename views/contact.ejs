<title> <%= title %> </title>

<% include partials/navbar.ejs%>

<div class="text-center"><h3>Register Here</h3></div>

<div class="container">

    <form action="/registration" method="POST" id="signup" class="square">

        </br>

        <div class="form-group fieldset contact">
            <label for=""><%= contactFirstName %></label>
            <input type="text" placeholder="First name" class="form-control" name="firstName" autofocus required>
        </div>

        <div class="form-group fieldset contact">
            <label for=""><%= contactLastName %></label>
            <input type="text" placeholder="Last name" class="form-control" name="lastName" required>
        </div>

        <div class="form-group fieldset contact">
            <label for=""><%= contactPhone %></label>
            <input type="text" placeholder="555-555-0123" class="form-control" name="phone" required>
        </div>

        <div class="form-group fieldset contact">
            <label for=""><%= contactEmail %></label>
            <input type="text" placeholder="Someone@onclick.com" class="form-control" name="email">
        </div>

        <div class="form-group fieldset contact">
            <label for=""><%= contactMessage %></label>
            <input type="textArea" placeholder="Someone@onclick.com" class="form-control" name="message">
        </div>

        </br>

        <div class="form-group fieldset">
            <button class="btn btn-primary" type="submit">Next</button>
        </div>
    </form>
</div>

